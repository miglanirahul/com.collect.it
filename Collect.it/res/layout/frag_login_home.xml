<?xml version="1.0" encoding="utf-8"?>
<com.collect.it.utils.VerticalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_home_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/login_home_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_general"
            android:text="@string/landing_upper_txt"
            android:textColor="@color/white" />

        <com.collect.it.utils.HorizontalListView
            android:id="@+id/login_home_image_horizontalview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/landing_middle_img_bg"
            android:gravity="center_vertical" >
        </com.collect.it.utils.HorizontalListView>

        <ImageView
            android:id="@+id/login_home_below_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/landing_dotsarrows" />

        <LinearLayout
            android:id="@+id/login_home_bottom_button_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_general" >

            <Button
                android:id="@+id/login_home_google_plus_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/landing_button_google"
                android:text="@string/login_google_btn"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/login_home_facebook_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_general"
                android:background="@drawable/landing_button_fb"
                android:text="@string/login_facebook_btn"
                android:textColor="@color/white"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_general"
                android:layout_marginTop="@dimen/margin_top_general"
                android:weightSum="2" >

                <Button
                    android:id="@+id/login_home_signup_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/landing_signup_login_btn_bg"
                    android:text="@string/signup"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/login_home_login_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_general"
                    android:layout_weight="1"
                    android:background="@drawable/landing_signup_login_btn_bg"
                    android:text="@string/login"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.collect.it.utils.VerticalScrollView>