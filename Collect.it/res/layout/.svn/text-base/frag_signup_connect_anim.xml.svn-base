<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup_face_google_connect_anim_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_general" >

    <TextView
        android:id="@+id/signup_face_google_connect_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/account_now_connected"
        android:textColor="@color/gray" />

    <LinearLayout
        android:id="@+id/signup_face_google_connect_anim_img_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_face_google_connect_txt"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_general" >

        <ImageView
            android:id="@+id/signup_face_google_connect_anim_left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/connect_it" />

        <ImageView
            android:id="@+id/signup_face_google_connect_anim_middle_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/anim_signup_connectivity_facebook" />

        <ImageView
            android:id="@+id/signup_face_google_connect_anim_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/connect_fb" />
    </LinearLayout>

    <TextView
        android:id="@+id/signup_face_google_create_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_face_google_connect_anim_img_linear"
        android:layout_centerHorizontal="true"
        android:text="@string/enter_detail_to_finish"
        android:textColor="@color/gray" />

</RelativeLayout>