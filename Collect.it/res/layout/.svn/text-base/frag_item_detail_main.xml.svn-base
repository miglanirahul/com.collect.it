<?xml version="1.0" encoding="utf-8"?>
<com.collect.it.utils.VerticalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_detail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_general" >

            <ImageView
                android:id="@+id/item_detail_user_img"
                android:layout_width="@dimen/image_placeholder"
                android:layout_height="@dimen/image_placeholder"
                android:scaleType="centerCrop"
                android:src="@drawable/signup_image_placeholder" />

            <TextView
                android:id="@+id/item_detail_user_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_general"
                android:layout_weight="1" />

            <Button
                android:id="@+id/item_detail_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_signup_popup_selector"
                android:text="@string/edit_item"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_detail_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minHeight="@dimen/min_width_item_image"
            android:minWidth="@dimen/min_width_item_image"
            android:paddingBottom="@dimen/padding_bottom_general"
            android:paddingLeft="@dimen/padding_left_general"
            android:paddingRight="@dimen/padding_right_general"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_detail_touchit_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/item_detail_user_list_img"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:id="@+id/item_detail_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_inactive_btn"
                android:text="@string/details"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/item_detail_comment_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_tab_selector"
                android:text="@string/comments"
                android:textColor="@color/white" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/item_detail_frament_framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>
    </LinearLayout>

</com.collect.it.utils.VerticalScrollView>